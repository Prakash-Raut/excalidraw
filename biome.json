{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"include": [
			"apps/**/*.ts",
			"apps/**/*.tsx",
			"packages/**/*.ts",
			"packages/**/*.tsx"
		],
		"ignoreUnknown": false,
		"ignore": [
			"node_modules",
			"dist",
			"build",
			"turbo",
			".turbo",
			".next",
			"coverage",
			"public",
			"pnpm-lock.yaml",
			"package-lock.json",
			"generated"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
